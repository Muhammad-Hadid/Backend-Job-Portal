# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/Jobs_database

# JWT Configuration
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_EXPIRE=1h

# CORS Configuration (comma-separated list for multiple origins)
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:3000

# Admin Credentials (IMPORTANT: Change these in production!)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_this_strong_password

# Security Configuration
BCRYPT_SALT_ROUNDS=10

# File Upload Configuration
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=uploads/resumes

# Cookie Configuration
# Set COOKIE_SECURE to true in production (requires HTTPS)
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

